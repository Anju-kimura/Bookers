<h1>Books</h1>

<table class="books-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></#td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  <tbody>
</table>

<div class="form-field">
  <h2>New book</h2>

  <% if @book.errors.any? %>
    <div class="errors">
      <p class="errors-count"><strong><%= @book.errors.count %></strong> errors prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <%= form_with model: @book do |f| %>

  <div class="new-form">
    
    <div class ="form-title">
      <h5 class="<%= "error-part" if @book.errors[:title].any? %>">Title</h5>
      <%= f.text_field :title, class: ("error-form" if @book.errors[:title].any?) %>
    </div>
    
    <div class="form-body">
      <h5 class="<%= "error-part" if @book.errors[:body].any? %>">Body</h5>
      <%= f.text_area :body, class: ("error-form" if @book.errors[:body].any?) %>
    </div>
    
    <div class="form-submit">
      <%= f.submit 'Create Book' %>
    </div>

  </div>

  <% end %>
</div>


<h1>Books</h1>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

<div class="new-form">
  
  <div class ="form-title">
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-body">
    <h5>Body</h5>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-submit">
    <%= f.submit 'Create Book' %>
  </div>

</div>

<% end %>


<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="errors">
  <p class="errors-count"><strong><%= @book.errors.count %></strong> errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book do |f| %>

<div class="new-form">  
  <div class ="form-title">
    <h5 class="<%= "error-part" if @book.errors[:title].any? %>">Title</h5>
    <%= f.text_field :title, class: ("error-form" if @book.errors[:title].any?) %>
  </div>
    
  <div class="form-body">
    <h5 class="<%= "error-part" if @book.errors[:body].any? %>">Body</h5>
    <%= f.text_area :body, class: ("error-form" if @book.errors[:body].any?) %>
  </div>
    
  <div class="form-submit">
    <%= f.submit 'Update Book' %>
  </div>
</div>

  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>

<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<div class="new-form">
  
  <div class ="form-title">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-body">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-submit">
    <%= f.submit 'Update Book' %>
  </div>

</div>

  <%= link_to "edit", edit_book_path(@book) %>
  |
  <%= link_to "Back", books_path %>

<% end %>
